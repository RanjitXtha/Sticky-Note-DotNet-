@model StickyNote.Models.Note

@{
    ViewData["Title"] = "Delete Note";
}

<h2>Delete Confirmation</h2>

<div class="alert alert-warning">
    <h4>Are you sure you want to delete this note?</h4>
    <p><strong>Title:</strong> @Model.Title</p>
    <p><strong>Content:</strong> @Model.Content</p>
    <p><strong>Created:</strong> @Model.CreatedAt.ToString("g")</p>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Yes, Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
