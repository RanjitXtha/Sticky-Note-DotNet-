@model StickyNote.Models.Note

<h2>Edit Note</h2>
<form asp-action="Edit" style="margin:auto;display:grid;grid-template-rows:2.5rem 1fr 2rem;background-color: #fffa9e; padding: 1rem;min-height:19rem ;width:17rem ; border-radius: 8px;">
    <input type="hidden" asp-for="Id" />
    <input asp-for="Title" style="background-color:transparent;border:none;" />
    <textarea style="resize:none;background-color:transparent;border:none;" asp-for="Content"></textarea><br />
    <button style="background-color:black;color:white;border:none;" type="submit">Update</button>
</form>